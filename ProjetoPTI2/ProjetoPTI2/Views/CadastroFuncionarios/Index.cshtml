@model ProjetoPTI2.Models.CadastroFuncionario

@{
    ViewData["Title"] = "Index";
}

<h2>Cadastro de Funcionários</h2>

<h4>Faça aqui o cadastro de um novo funcionário!</h4>
<hr />


<div class="container">

    <form>
        <div class="form-row">
            <div class="form-group col-md-4">
                <label for="inputEmail4">Nome</label>
                <input type="email" class="form-control" id="inputEmail4" placeholder="Nome">
            </div>
            <div class="form-group col-md-4">
                <label for="inputPassword4">Sobrenome</label>
                <input type="password" class="form-control" id="inputPassword4" placeholder="Sobrenome">
            </div>
            <div class="form-group col-md-4">
                <label for="inputState">Cargo</label>
                <select id="inputState" class="form-control">
                    <option selected>Infraestrutura Predial</option>
                    <option>Administrador de sistemas</option>
                    <option>Recursos Humanos</option>
                    <option>Financeiro</option>
                    <option>Recepcionista</option>
                </select>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-4">
                <label for="inputAddress">Data de Nascimento</label>
                <input type="date" class="form-control" id="inputAddress" placeholder="">
            </div>
            <div class="form-group col-md-4">
                <label for="inputAddress">CPF</label>
                <input type="number" class="form-control" id="inputAddress" placeholder="00000000000">
            </div>
            <div class="form-group col-md-4">
                <label for="inputState">Telefone</label>
                <input type="text" class="form-control" id="inputCity" placeholder="00 90000-0000">
            </div>
        </div>


        <div class="form-row">
            <div class="form-group col-md-4">
                <label for="inputCity">E-mail</label>
                <input type="text" class="form-control" id="inputCity" placeholder="exemplo@gmail.com">
            </div>
            <div class="form-group col-md-4">
                <label for="inputAddress2">Data de Contratação</label>
                <input type="date" class="form-control" id="inputAddress2">
            </div>
            <div class="form-group col-md-4">
                <label for="inputCity">Salário inicial</label>
                <input type="text" class="form-control" id="inputCity" placeholder="R$3.500,00">
            </div>

        </div>



         <div class="form-row">
            <div class="form-group col-md-12">
                <button type="submit" class="btn btn-primary">Cadastrar</button>

            </div>
         </div>



        <div class="form-row">
            <div class="form-group col-md-12 ">
                <a asp-area="" asp-controller="RelatoriosFuncionarios" asp-action="Index">Relatório de Funcionários</a>
            </div>
        </div>

    </form>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
