@model ProjetoPTI2.Models.CadastroFuncionario

@{
    ViewData["Title"] = "Cadastrar Funcionario";
}

<h2>Cadastro de Funcionário</h2>
<br />
<div>
    <a asp-action="Index">Voltar a lista de Funcionários</a>
</div>
<hr />

<div class="container">
    <form asp-action="Create">

        <div class="form-group col-md-6">
            <label asp-for="Nome" class="control-label">Nome completo</label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="form-row">
            <div class="form-group col-md-3">
                <label asp-for="Matricula" class="control-label"></label>
                <input asp-for="Matricula" class="form-control" />
                <span asp-validation-for="Matricula" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="Cpf" class="control-label">CPF</label>
                <input asp-for="Cpf" class="form-control" />
                <span asp-validation-for="Cpf" class="text-danger"></span>
            </div>


        </div>
        <div class="form-row">
            <div class="form-group col-md-4">
                <label asp-for="Dt_Contratacao" class="control-label">Data de contratação</label>
                <input asp-for="Dt_Contratacao" class="form-control" />
                <span asp-validation-for="Dt_Contratacao" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Email" class="control-label">E-mail</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group col-md-2">
                <label asp-for="TipoLogin" class="control-label">Tipo de Login</label>
                <input asp-for="TipoLogin" class="form-control" max="1" min="0"/>
                <span asp-validation-for="TipoLogin" class="text-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <button type="submit" class="btn btn-primary">Cadastrar</button>
            </div>
        </div>
    </form>
    <span>
    </span>
</div>

<hr />
<div class="container">
    <h4>Tipo de login 1 | Destinado a administrador do sistema</h4>
    <h4>Tipo de login 0 | Destinado a todos os outros colaboradores</h4>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
