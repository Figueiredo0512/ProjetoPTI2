@model ProjetoPTI2.Models.Chamado

@{
    ViewData["Title"] = "Criar chamado";
}

<h2>Abertura de chamado</h2>
<br />
<div>
    <a asp-action="Index">Voltar a lista de chamados</a>
</div>
<hr />

<div class="container">

    <form asp-action="Create">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Titulo" class="control-label">Título</label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="Dt_abertura" class="control-label">Data de abertura</label>
                <input asp-for="Dt_abertura" class="form-control" />
                <span asp-validation-for="Dt_abertura" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="Dt_fechamento" class="control-label">Data de fechamento</label>
                <input asp-for="Dt_fechamento" class="form-control" />
                     <span asp-validation-for="Dt_fechamento" class="text-danger"></span>
            </div>
           
        </div>
        <div class="form-row">
            <div class="form-group col-md-12">
                <label asp-for="Descricao" class="control-label">Descrição</label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-12">
                <label asp-for="Resolucao" class="control-label">Resolução</label>
                <input asp-for="Resolucao" class="form-control" />
                <span asp-validation-for="Resolucao" class="text-danger"></span>
            </div>
        </div>


        <div class="form-row">  
            <div class="form-group col-md-6">
                <label asp-for="Solicitante" class="control-label">Nome do solicitante</label>
                <input asp-for="Solicitante" class="form-control"  disabled/>
                <span asp-validation-for="Solicitante" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Resolvedor" class="control-label">Nome do resolvedor</label>
                <input asp-for="Resolvedor" class="form-control" />
                <span asp-validation-for="Resolvedor" class="text-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <button type="submit" class="btn btn-primary">Criar</button>
            </div>

        </div>
    </form>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
