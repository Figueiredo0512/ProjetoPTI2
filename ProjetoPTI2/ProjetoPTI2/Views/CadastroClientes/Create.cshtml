@model ProjetoPTI2.Models.CadastroCliente

@{
    ViewData["Title"] = "Cadastro de Clientes";
}

<h2>Cadastro de um novo Cliente.</h2>

<br />
<div>
    <a asp-action="Index">Voltar a lista de Clientes</a>
</div>
<hr />

<div class="container">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Nome" class="control-label">Nome completo</label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Cnpj" class="control-label">CNPJ</label>
                    <input asp-for="Cnpj" class="form-control" />
                    <span asp-validation-for="Cnpj" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Telefone" class="control-label">Telefone</label>
                    <input asp-for="Telefone" class="form-control" />
                    <span asp-validation-for="Telefone" class="text-danger"></span>
                </div>
            <div class="form-group col-md-6">
                <label asp-for="Dt_cadastro" class="control-label">Data do cadastro</label>
                <input asp-for="Dt_cadastro" class="form-control" />
                <span asp-validation-for="Dt_cadastro" class="text-danger"></span>
            </div>
            </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Email" class="control-label">E-mail</label>
                <input asp-for="Email" type="email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="TipoLogin" class="control-label">Tipo de Login</label>
                <input asp-for="TipoLogin" class="form-control" value="2" disabled />
                <span asp-validation-for="TipoLogin" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Senha" class="control-label">Senha</label>
                <input asp-for="Senha" type="password" class="form-control" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
                <div class="form-group col-md-6">
                <label asp-for="Senha" class="control-label">Confirmação de senha</label>
                <input asp-for="Senha" class="form-control" disabled/>
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
        </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <input type="submit" value="Cadastrar" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

